  $(".vote").click(function() {
     var vote = $(this);
     var did = vote.attr('defid'),
         wid = "<%= word._id %>";
     var up = vote.hasClass('up') ? true : false;
     $.post('/vote/'+wid+'/'+did, {up: up}, 
          function(data) {
